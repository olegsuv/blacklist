{
    "manifest_version": 2,
    "name": "Rieltor Blacklist",
    "description": "This extension shows status of article author searched in our database",
    "version": "1.10",
    "background": {
        "persistent": false,
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/ic_cached_black_24dp_1x.png",
        "default_popup": "panel.html"
    },
    "permissions": [
        "activeTab",
        "https://blacklist.gooffline.org.ua/*",
        "https://www.olx.ua/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.olx.ua/*"
            ],
            "js": [
                "node_modules/jquery/dist/jquery.min.js",
                "js/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "js/*",
        "node_modules/*",
        "images/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

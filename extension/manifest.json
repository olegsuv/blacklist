{
  "manifest_version": 2,
  "name": "Rieltor Blacklist",
  "description": "This extension shows status of article author searched in our database",
  "version": "1.3",
  "browser_action": {
    "default_icon": "blacklist-128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.olx.ua/*"
      ],
      "js": [
        "jquery.min.js",
        "contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/*"
  ]
}
